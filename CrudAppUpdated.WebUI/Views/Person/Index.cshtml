@model IEnumerable<CrudAppUpdated.WebUI.Models.Person>

<div class="container p-3">
    <div class="row pt-4">

        <div class="col-6">
            <h2 class="text-primary">Person List</h2>
        </div>

        <div class="col-6 text-right">
            <a asp-controller="Person" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Person
            </a>
        </div>

    </div>

    <br /><br />

    @if (Model != null && Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="25%">@obj.FirstName</td>

                        <td width="25%">@obj.LastName</td>

                        <td width="30%">@obj.Email</td>

                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Person" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="far fa-edit text-center"></i>
                                </a>
                                <a asp-controller="Person" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="far fa-trash-alt text-center"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Person exists. </p>
    }
</div>